{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "baseUrl": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
